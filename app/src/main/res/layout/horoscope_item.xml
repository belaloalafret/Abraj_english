<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="26dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_holder"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horoscope_item_photo"
                android:layout_alignParentStart="true"
                android:src="@drawable/img1"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horoscope_item_name"
                android:layout_toEndOf="@id/horoscope_item_photo"
                android:layout_toRightOf="@+id/horoscope_item_photo"
                android:layout_alignParentTop="true"
                android:text="title"
                android:textSize="29sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="details..."
                android:textSize="@dimen/tab_text_size"
                android:layout_marginTop="5dp"
                android:id="@+id/horoscope_item_details"
                android:layout_toRightOf="@id/horoscope_item_photo"
                android:layout_below="@id/horoscope_item_name"
                android:layout_toEndOf="@id/horoscope_item_photo" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>